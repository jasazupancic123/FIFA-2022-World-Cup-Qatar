<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StandingsFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/darkRed"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/loadingStandingsText"
            android:layout_width="match_parent"
            android:text="Loading standings"
            android:gravity="center"
            android:textColor="@color/darkRed"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/progressBar"
            android:layout_height="wrap_content"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/homeTeamCard"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/loadingStandingsText"
            android:visibility="invisible"
            android:backgroundTint="@color/darkRed"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/homeTeamGroupText"
                android:layout_width="match_parent"
                android:text="Group A"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/homeStandings_recycler_view"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/homeTeamCard" />

        <androidx.cardview.widget.CardView
            android:id="@+id/awayTeamCard"
            android:layout_width="match_parent"
            android:backgroundTint="@color/darkRed"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/homeStandings_recycler_view"
            android:visibility="invisible"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/awayTeamGroupText"
                android:layout_width="match_parent"
                android:text="Group B"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/awayStandings_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@+id/awayTeamCard" />
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>